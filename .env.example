# Galaxy Docker Compose Environment Variables
# Copy this file to .env and modify as needed

# Django Settings
DEBUG=True

# PostgreSQL Settings
POSTGRESQL_USER=galaxy
POSTGRESQL_PASSWORD=galaxy
POSTGRESQL_DATABASE=galaxy
POSTGRESQL_HOST=postgres
POSTGRESQL_PORT=5432

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=galaxy

# Galaxy Admin Settings
GALAXY_ADMIN_USER=admin
GALAXY_ADMIN_PASSWORD=admin

# Pulp Secret Key (CHANGE IN PRODUCTION!)
PULP_SECRET_KEY=your-secret-key-here-change-in-production

# Galaxy Content Signing
GALAXY_GNUPG_HOME=/var/lib/pulp/gnupg
GALAXY_SIGNING_SCRIPTS=/var/lib/pulp/scripts
GALAXY_REQUIRE_SIGNATURE_FOR_APPROVAL=False
GALAXY_SIGNATURE_UPLOAD_ENABLED=False
GALAXY_AUTO_SIGN_COLLECTIONS=False

# Galaxy API
GALAXY_API_HOSTNAME=http://galaxy-web.orb.local
GALAXY_CONTENT_HOSTNAME=http://galaxy-web.orb.local
CONTENT_ORIGIN=http://galaxy-web.orb.local
X_PULP_CONTENT_HOST=galaxy-content
X_PULP_CONTENT_PORT=24816
GALAXY_API_DEFAULT_DISTRIBUTION_BASE_PATH=published
GALAXY_API_STAGING_DISTRIBUTION_BASE_PATH=staging

# Galaxy Settings
GALAXY_API_PATH_PREFIX=api/galaxy
GALAXY_ENABLE_LEGACY_ROLES=True
GALAXY_DYNAMIC_SETTINGS=True
GALAXY_REQUIRE_CONTENT_APPROVAL=True
STATIC_URL=/static/

# Feature Flags
EE_ENABLED=False
SIGNING_ENABLED=False
GALAXY_CONTENT_SIGNING_ENABLED=False
AI_DENY_INDEX=False

# Logging
LOG_LEVEL=INFO

# =============================================================================
# Production Settings (Uncomment and modify for production)
# =============================================================================

# Worker Scaling
# WORKER_REPLICAS=2

# Port Configuration
# GALAXY_API_PORT=8000
# GALAXY_CONTENT_PORT=24816
# GALAXY_WEB_PORT=8080

# Backup Configuration
# BACKUP_DIR=./backups
# BACKUP_RETENTION_DAYS=7
# AUTO_BACKUP_ENABLED=false
# BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM (cron format)
